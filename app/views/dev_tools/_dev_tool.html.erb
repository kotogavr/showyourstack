<div id="<%= dom_id dev_tool %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= dev_tool.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= dev_tool.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this dev tool", dev_tool, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this dev tool", edit_dev_tool_path(dev_tool), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
